<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_darker"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleCompany_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_titleCompany_L9_info"
        android:textColor="@android:color/white"
        android:textSize="20dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCompany_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/txt_infoCompany_L9_info"
        android:textSize="16dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dip"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/titleApp_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="20dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoApp_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/txt_infoApp_L9_info"
        android:textSize="16dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dip"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/titleContact_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_titleContact_L9_info"
        android:textColor="@android:color/white"
        android:textSize="20dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoContactTelf_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/txt_infoContactTelf_L9_info"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/infoContactMail_L9_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/txt_infoContactMail_L9_info"

        android:textSize="16dip" />
</LinearLayout>