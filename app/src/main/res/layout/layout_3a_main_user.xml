<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity3_main_user"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/holo_blue_dark"
    tools:context="org.proven.airmns.Activity3AMainUser">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/button_help"
        android:id="@+id/imageView"
        android:layout_gravity="right" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.29">

        <ImageView android:src="@drawable/airmns"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.08"
        android:gravity="center">

        <ImageView android:id="@+id/imagenLogo0"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/button_3a_1_manage_reservation"
            android:scaleType="fitCenter"
            android:layout_weight="0.15"/>


        <ImageView android:id="@+id/imagenLogo1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/button_3a_2_booking_history"
            android:scaleType="fitCenter"
            android:layout_weight="0.15" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.08"
        android:gravity="center">

        <ImageView android:id="@+id/imagenLogo4"
            android:layout_height="match_parent"
            android:src="@drawable/button_3a_3_valoration_reserve"
            android:scaleType="fitCenter"
            android:layout_weight="0.15"
            android:layout_width="60dp" />


        <ImageView android:id="@+id/imagenLogo5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/button_3a_4_edit_profile"
            android:scaleType="fitCenter"
            android:layout_weight="0.15" />

    </LinearLayout>

</LinearLayout>